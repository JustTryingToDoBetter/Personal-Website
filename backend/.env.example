# Example environment variables for the Django backend

# Secret key used for cryptographic signing.  Change this in production.
DJANGO_SECRET_KEY=change-me

# Debug mode should be disabled in production.
DJANGO_DEBUG=True

# Comma separated list of allowed hosts (no spaces).  Use `*` to allow all
# hosts in development.
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Connection URL for PostgreSQL.  Falls back to SQLite when unset.
DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/DBNAME

# CORS configuration.  Set to `False` and specify `CORS_ALLOWED_ORIGINS` for
# stricter control in production.
CORS_ALLOW_ALL_ORIGINS=True
# CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com